@import '../../../template/picker-template/picker-template.wxss';

.cell-group {
    border-top: 1px solid #c8c7cc;
    border-bottom: 1px solid #c8c7cc;
    background-color: #fff;
    margin: 10rpx 0;
}

.cell {
    width: 100%;
    height: 100rpx;
    display: flex;
    position: relative;
    flex-direction: row;
}

.line {
    width: 730rpx;
    height: 1px;
    right: 0px;
    bottom: 0px;
    background-color: #c8c7cc;
    position: absolute;
}

.label {
    width: 200rpx;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 28rpx;
    font-weight: 700;
    padding: 0 30rpx;
}

input {
    width: 100%;
    font-size: 28rpx;
    height: 100rpx;
}
.radio-group{
    width: 100%;
    line-height: 100rpx;
}
.radio{
    margin-right: 20rpx;
}
.iconR{
    right: 0;
    position: absolute;
}
.chepai{
    width: 400rpx;
    font-size: 30rpx;
    font-weight: bold;
    line-height: 100rpx;
    text-align: center;
    letter-spacing: 20rpx;
}
.submit {
    color: white;
    background-color: #3c87fc;
    margin: 20rpx 40rpx;
}
