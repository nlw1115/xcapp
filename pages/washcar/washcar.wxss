.title {
    height: 60rpx;
    font-size: 34rpx;
    line-height: 60rpx;
    padding: 0 20rpx; 
}

.cell-group {
    border-top: 1px solid #c8c7cc;
    border-bottom: 1px solid #c8c7cc;
    background-color: #fff;
    box-shadow: 1px 1px 1px rgba(0, 0, 0, 0.3);
}
.cell {
    width: 100%;
    height: 100rpx;
    display: flex;
    position: relative;
    flex-direction: row;
}
.line{
    width: 730rpx;
    height: 1px;
    right: 0px;
    bottom: 0px;
    background-color: #c8c7cc;
    position: absolute;
}

.label {
    width: 25%;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 28rpx;
    font-weight: 700;
    padding: 0 30rpx;  
}

input {
    width: 100%;
    font-size: 28rpx;
    height: 100rpx;
}
textarea{
    width: 650rpx;
    height: 200rpx;
    font-size: 28rpx;
    line-height: 30rpx;
    background: #fff;
    border: 1px solid #c8c7cc;
    margin: auto;
    padding: 30rpx;
    box-shadow: 1px 1px 1px rgba(0, 0, 0, 0.3);
}

.bottomView{
    width: 100%;
    height: 100rpx;
    left: 0px;
    bottom: 0px;
    position: fixed;
    display: flex;
    flex-direction: row;
    background-color: #fff;
    box-shadow: 1px 1px 100px rgba(0, 0, 0, 0.3);
}
.money{
    width: 550rpx;
    height: 100%;
    font-size: 34rpx;
    font-weight: 600;
    line-height: 100rpx;
    text-align: center;
}
.submit{
    width: 160rpx;
    height: 60rpx;
    color: #fff;
    line-height: 60rpx;
    font-size: 28rpx;
    padding: 0px;
    margin: auto;
    background-color: #009FE9;
    display: inline-block;
}
