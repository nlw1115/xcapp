swiper {
    width: 100%;
    height: 280rpx;
}

swiper image {
    width: 100%;
    height: 280rpx;
}

.washcar-item {
    width: 100%;
    height: 160rpx;
    display: flex;
    flex-direction: row;
    margin: 10rpx 0px;
    padding: 10rpx 0rpx;
    background-color: #fff;
    box-shadow: 1px 1px 1px rgba(0, 0, 0, 0.3);
}

.washcar-item image {
    width: 120rpx;
    height: 120rpx;
    margin: auto 20rpx;
}

.washcar-item-content {
    flex: 1;
    height: 130rpx;
    margin: auto 0;
    overflow: hidden;
}

.title {
    display: block;
    font-size: 28rpx;
    font-weight: bold;
}

.dec {
    color: grey;
    font-size: 22rpx;
}

.btn-yuyue {
    width: 120rpx;
    height: 120rpx;
    display: flex;
    font-size: 28rpx;
    margin-right: 20rpx;
    flex-direction: column;
}

.money {
    color: red;
    text-align: center;
    overflow: hidden;
    margin-bottom: 20rpx;
}

.btn-yuyue button {
    width: 108rpx;
    height: 66rpx;
    line-height: 66rpx;
    color: white;
    font-size: 28rpx;
    padding: 0px 0px;
    background-color: #009fe9;
    border-color: #009fe9;
}
