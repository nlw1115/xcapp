.head {
    width: 100%;
    height: 300rpx;
    background-color: #009fe9;
    display: flex;
    flex-direction: row;
    text-align: center;
}
.head-name{
    color: #1A485D;
    font-size: 34rpx;
}
.head-num{
    font-size: 60rpx;
    line-height: 150rpx;
}
.dingdan_color{
    color: #295858
}
.money_color{
    color: #E53E3E;
}
.left-dingdan {
    flex: 1;
}

.avatar {
    flex: 1;
}

.right-yue {
    flex: 1;
}

.avatar image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
}

.username {
    color: #fff;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 30rpx;
    text-align: center;
}

@-webkit-keyframes rotation {
    from {
        -webkit-transform: rotateY(0deg);
    }

    to {
        -webkit-transform: rotateY(360deg);
    }
}

.Rotation {
    -webkit-transform: rotate(360deg);
    animation: rotation 2s linear;
}

.nav {
    width: 100%;
    height: 180rpx;
    display: flex;
    flex-direction: row;
    text-align: center;
    box-shadow: 0 5px 6px #ccc;
}

.nav-item {
    flex: 1;
    height: 180rpx;
    border-bottom: 1px solid #c8c7cc;
    position: relative;
}
.nav-item ::before{
    width: 1px;
    height: 90rpx;
    background: #c8c7cc;
    content: '';
    left: 1px;
    top: 30rpx;
    z-index: 99;
    position: absolute;
}
.no-before ::before{
    height: 0;
    width: 0;
}
.nav-item image {
    width: 110rpx;
    height: 110rpx;
    margin-top: 10rpx;
    margin-bottom: 5rpx;
}
.cell-group {
    border-top: 1px solid #c8c7cc;
    border-bottom: 1px solid #c8c7cc;
    background-color: #fff;
    box-shadow: 0 5px 6px #ccc;
}
.cell {
    width: 100%;
    height: 100rpx;
    display: flex;
    position: relative;
    flex-direction: row;
    justify-content: space-between;
}
.label icon{
    margin-right: 10rpx;
}
.line{
    width: 730rpx;
    height: 1px;
    right: 0px;
    bottom: 0px;
    background-color: #c8c7cc;
    position: absolute;
}

.label {
    height: 100rpx;
    line-height: 100rpx;
    font-size: 28rpx;
    /* font-weight: 700; */
    padding: 0 30rpx;  
}